<Profile>
<Name>Kill Halls of Agony Level 1</Name>
<KillMonsters>True</KillMonsters>
<PickupLoot>True</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<Order>	

	<While condition="CurrentWorldId != 2826">			
		<UseWaypoint waypointNumber="15" questId="1"/>	
		<WaitTimer questId="1" stepId="2" waitTime="6000" /></While>			

	<WaitTimer questId="1" stepId="2" waitTime="3000" />	
	
	
	
	<!-- Settings -->
	<If condition="Zeta.Bot.Settings.GlobalSettings.Instance.LastProfile.Contains('Zerg')"><ToggleTargeting questId="1" combat="False" /></If>				

	<EndChildren when="ObjectiveMarkerFound" distance="1000">		
	
		<TrinityExploreDungeon stayAfterBounty="False" questId="1" stepId="2" until="BountyComplete" boxTolerance="0.16" boxSize="20" >
			<IgnoreScenes>
				<IgnoreScene sceneName="Exit" />	
			</IgnoreScenes>
		</TrinityExploreDungeon>		
	
	</EndChildren> 	
	
	<LogMessage quest="1" output="Moving to Objective Marker" />		
	
	<MoveToMapMarker questId="1" markerNameHash="-1" actorId="0" interactRange="5" pathPrecision="10" interactAttempts="-1" isPortal="False" maxSearchDistance="1050" timeout="60000" />
	
	<!-- 
		If movement functions failed to generate a path to location and ended prematurely 
		We can try and get into a different position with ExploreDungeon
	-->
	<EndChildren when="Timeout" timeout="20000">	
	
		<TrinityExploreDungeon stayAfterBounty="False" questId="1" stepId="2" until="BountyComplete" boxTolerance="0.14" boxSize="14" >
			<IgnoreScenes>
				<IgnoreScene sceneName="Exit" />	
			</IgnoreScenes>
		</TrinityExploreDungeon>	
		
	</EndChildren>
	
	<!-- 
		and now hopefully we'll get a path to the objective
	-->	
	<MoveToMapMarker questId="1" markerNameHash="-1" actorId="0" interactRange="5" pathPrecision="10" interactAttempts="-1" isPortal="False" maxSearchDistance="1600" timeout="60000" />				
			
	
	<ToggleTargeting questId="1" combat="True" killRadius="45" />
	
	<!-- 
	345544: Kill Bludgeonskull
	347011: Kill Battlerage
	345542: Kill Crassus
	-->
	<If condition="
		HasQuest(345544) or
		HasQuest(347011) or 
		HasQuest(345542)">				

		<LogMessage quest="1" output="Killing remaining monsters for bounty" />				
			
		<TrinityExploreDungeon stayAfterBounty="False" questId="1" stepId="2" until="BountyComplete" boxTolerance="0.16" boxSize="20" >
			<IgnoreScenes>
				<IgnoreScene sceneName="Exit" />	
			</IgnoreScenes>
		</TrinityExploreDungeon>		
	
	</If>			
	
		
	
	<WaitTimer questId="1" stepId="2" waitTime="2000" />		
	<LoadProfile file="act1.xml" />
	
</Order>
</Profile>