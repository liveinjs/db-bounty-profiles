<Profile>

<Name>The Cursed Cellar</Name>

<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<Order>
<If condition="Me.IsInTown==False">   
<UseTownPortal questId="1" />       
</If>
<If condition="Me.IsInTown ">
	<!--Act 1 WP-->
	<If condition="CurrentWorldId == 332336">
		<UseWaypoint questId="1" stepId="1" actorId="223757" x="401.7305" y="555.0093" z="24.90835" waypointNumber="1"/>
	</If>
	<!--Act 2 WP-->
	<If condition="CurrentWorldId == 161472">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="324.8699" y="291.0312" z="1.645629" waypointNumber="1"/> 
	</If>
	<!--Act 3/4 WP-->
	<If condition="CurrentWorldId == 172909">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="402.5403" y="414.342" z="1.5338" waypointNumber="1"/> 
	</If>
	<!--Act 4 WP-->
	<If condition="CurrentWorldId == 304235">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="557.5455" y="525.3394" z="2.796465" waypointNumber="1"/> 
	</If>
	<WaitTimer questId="1" stepId="1" waitTime="1000" />
</If>
    <!-- Look for him -->
	<BountyAtStep questSNO="369944" step="4">
		<If condition="CurrentWorldId == 71150">
			<SafeMoveTo questId="312429" stepId="2" x="2289.81" y="2562.356" z="27.10001" />
			<MoveToActor questId="312429" stepId="2" actorId="5502" isPortal="True" destinationWorldId="106752"/>
			<WaitTimer questId="312429" stepId="2" waitTime="1000" />
			<SafeMoveTo questId="312429" stepId="2" x="128.015" y="125.9703" z="0.1" />
			<MoveToActor questId="312429" stepId="2" actorId="365097"/>
			<WaitTimer questId="312429" stepId="2" waitTime="10000" />
			<!-- If not completed, keep killing things until it is complete-->
			<BountyAtStep questSNO="369944" step="4">
				<LogMessage quest="1" step="1" output="Interacted with chest, but still not done. Roaming to make sure everything is dead." />
				<AWTrinityExploreDungeon bountyQuestSNO="369944" bountyStep="4" questId="312429" stepId="2" until="FullyExplored" boxTolerance="0.10" boxSize="15" />
			</BountyAtStep>
		</If>
	</BountyAtStep>

    <!-- Portal Home -->
    <TrinityTownPortal questId="312429" stepId="2" />
    <WaitTimer questId="312429" stepId="2" waitTime="2500" />
	<LoadProfile file="../profile.xml" />
</Order>
</Profile>