<Profile>

<Name>The Cursed Chamber of Bone</Name>

<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<Order>
<If condition="Me.IsInTown==False">   
	<LoadProfile file="act1.xml" />       
</If>
<If condition="Me.IsInTown ">
	<!--Act 1 WP-->
	<If condition="CurrentWorldId == 332336">
		<UseWaypoint questId="1" stepId="1" actorId="223757" x="401.7305" y="555.0093" z="24.90835" waypointNumber="2"/>
	</If>
	<!--Act 2 WP-->
	<If condition="CurrentWorldId == 161472">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="324.8699" y="291.0312" z="1.645629" waypointNumber="2"/> 
	</If>
	<!--Act 3/4 WP-->
	<If condition="CurrentWorldId == 172909">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="402.5403" y="414.342" z="1.5338" waypointNumber="2"/> 
	</If>
	<!--Act 4 WP-->
	<If condition="CurrentWorldId == 304235">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="557.5455" y="525.3394" z="2.796465" waypointNumber="2"/> 
	</If>
	<WaitTimer questId="1" stepId="1" waitTime="1000" />
</If>

    <!-- Look for Shrine -->
	<HaveBounty questId="375198">
    <If condition="CurrentLevelAreaId == 19780">
      <TrinityExploreDungeon stayAfterBounty="False" questId="1" stepId="2" until="ObjectFound" actorId="364601" boxTolerance="0.01" boxSize="25" >
      <PrioritizeScenes>
        <PriorityScene sceneID="1884" />
      </PrioritizeScenes>
      </TrinityExploreDungeon>
      <WaitTimer questId="1" stepId="2" waitTime="5000" />

      <MoveToActor questId="1" actorId="364601" interactRange="10" name="x1__Event_CursedShrine"  pathPrecision="50" pathPointLimit="250" statusText="" />
      <!-- If not completed, keep killing waves until it is complete-->

      <WaitTimer questId="1" stepId="4" waitTime="3000" />
      <WaitTimer questId="1" stepId="2" waitTime="1000" />
      <MoveToActor questId="1" stepId="2" actorId="176003" />
    </If>
	</HaveBounty>

    <!-- Portal Home -->
    <TrinityTownPortal questId="375198" stepId="2" />
    <WaitTimer questId="375198" stepId="2" waitTime="2500" />
<LoadProfile file="act1.xml" />
</Order>
</Profile>