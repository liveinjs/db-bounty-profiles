			<UseWaypoint questId="1" stepId="1" actorId="6442" x="557.5455" y="525.3394" z="2.796465" waypointNumber="7"/> 
		</If>
		<WaitTimer questId="1" stepId="1" waitTime="1000" />
	</If>

