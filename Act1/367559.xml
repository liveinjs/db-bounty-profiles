<Profile>

<Name>Kill Krailen the Wicked</Name>

<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<Order>
<If condition="Me.IsInTown==False and not CurrentLevelAreaId == 19952">   
<UseTownPortal questId="1" />       
</If>
<If condition="Me.IsInTown ">
	<!--Act 1 WP-->
	<If condition="CurrentWorldId == 332336">
		<UseWaypoint questId="1" stepId="1" actorId="223757" x="401.7305" y="555.0093" z="24.90835" waypointNumber="14"/>
	</If>
	<!--Act 2 WP-->
	<If condition="CurrentWorldId == 161472">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="324.8699" y="291.0312" z="1.645629" waypointNumber="14"/> 
	</If>
	<!--Act 3/4 WP-->
	<If condition="CurrentWorldId == 172909">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="402.5403" y="414.342" z="1.5338" waypointNumber="14"/> 
	</If>
	<!--Act 4 WP-->
	<If condition="CurrentWorldId == 304235">
		<UseWaypoint questId="1" stepId="1" actorId="6442" x="557.5455" y="525.3394" z="2.796465" waypointNumber="14"/> 
	</If>
	<WaitTimer questId="1" stepId="1" waitTime="1000" />
</If>
    <!-- Look for him -->
	<BountyAtStep questSNO="367559" step="4">
		<If condition="CurrentWorldId == 71150">
			<SafeMoveTo questId="312429" stepId="2" x="1430" y="4030" z="39"/> 
			<SafeMoveTo questId="312429" stepId="2" x="1269" y="3903" z="78" />
			<SafeMoveTo questId="312429" stepId="2" x="1080.303" y="3401.695" z="65.4789" />
			<MoveToActor questId="312429" stepId="2" actorId="176001" isPortal="True" destinationWorldId="75049" />
			<WaitTimer questId="312429" stepId="2" waitTime="1000" />
			<AWTrinityExploreDungeon bountyQuestSNO="367559" bountyStep="4" questId="312429" stepId="2" until="ObjectFound" actorId="218664" boxTolerance="0.10" boxSize="15" />
			<!-- If not completed, keep killing things until it is complete-->
			<BountyAtStep questSNO="367559" step="4">
				<LogMessage quest="312429" step="2" output="Found named but still not done, clearing some more." />
				<AWTrinityExploreDungeon bountyQuestSNO="367559" bountyStep="4" questId="312429" stepId="2" until="FullyExplored" boxTolerance="0.10" boxSize="15" />
			</BountyAtStep>
		</If>
	</BountyAtStep>

    <!-- Portal Home -->
    <TrinityTownPortal questId="312429" stepId="2" />
    <WaitTimer questId="312429" stepId="2" waitTime="2500" />
	<LoadProfile file="../profile.xml" />
</Order>
</Profile>