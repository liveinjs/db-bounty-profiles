<PickupLoot>True</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<Order>	

	<!-- Caverns of Araneae Waypoint -->
	<While condition="CurrentWorldId != 180550">			
		<UseWaypoint waypointNumber="12" questId="1"/>	
		<WaitTimer questId="1" stepId="2" waitTime="5000" />	
	</While>

	<ToggleTargeting questId="1" combat="True" killRadius="45" />	
		
	<TrinityExploreDungeon stayAfterBounty="False" questId="1" stepId="2" until="BountyComplete" boxTolerance="0.16" boxSize="20" >
		<IgnoreScenes>
			<IgnoreScene sceneName="Exit" />	
		</IgnoreScenes>
	</TrinityExploreDungeon>		
		
	<ToggleTargeting questId="1" stepId="2" killRadius="31" />					
	<LoadProfile file="act1.xml" />	
	
</Order>
</Profile>