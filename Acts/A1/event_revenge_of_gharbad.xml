			<SafeMoveTo questId="1" stepId="2" x="2136.469" y="4327.496" z="-28.8857"/>
			<ToggleTargeting questId="1" stepId="1" killRadius="80" />			
			<MoveToActor questId="1" stepId="2" actorId="81068"/>
			<WaitTimer questId="1" stepId="2" waitTime="10000" />
			<MoveToActor questId="1" stepId="2" actorId="225252" timeout="15"/> <!-- first totem -->
			<WaitTimer questId="1" stepId="2" waitTime="2000" />
			<MoveToActor questId="1" stepId="2" actorId="225252" timeout="15"/> <!-- second totem -->
			<WaitTimer questId="1" stepId="2" waitTime="2000" />
