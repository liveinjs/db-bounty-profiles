<Profile>
<Name>The Curse Grove (365381)</Name>
<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<TargetBlacklists>
	<TargetBlacklist actorId="5747" /> <!-- trDun_Cath_Chandelier_Trap_Switch2-15223 -->
	<TargetBlacklist actorId="365097" /> <!-- Cursed Chest -->
	<TargetBlacklist actorId="364601" /> <!-- Cursed Shrine -->
</TargetBlacklists>
<Order>
		<ToggleTargeting questId="1" stepId="2" killRadius="5" />		
	<If condition="Me.IsInTown==False"><TrinityTownPortal questId="1" /></If>
	<WaitTimer questId="1" stepId="2" waitTime="1000" />			
	<UseWaypoint waypointNumber="8" questId="1"/>	
	<WaitTimer questId="1" stepId="2" waitTime="3500" />		
	<If condition="HasQuest(365381)">	
		<If condition="HasQuest(365381)">
			<SafeMoveTo questId="1" stepId="2" x="1791" y="559" z="-0" pathPrecision="2" pathPointLimit="250" statusText="Moving to Location 1 of 3"/>
			<If condition="CurrentWorldId == 71150 and ActorExistsAt(365097, Me.Position.X, Me.Position.Y, Me.Position.Z, 150)">
				
				<LogMessage quest="1" step="1" output="clearing the area first" /> 
				<!-- unfortunately this ring terrain formation can cause flip-flop stuck 
				     between goats outside the ring so we have to clear the area first -->
					 
				<SafeMoveTo questId="365381" x="1822" y="717" /> 
				<SafeMoveTo questId="365381" x="1934" y="733" /> 
				<SafeMoveTo questId="365381" x="1928" y="551" /> 
				<SafeMoveTo questId="365381" x="1662" y="514" /> 
				<SafeMoveTo questId="365381" x="1735" y="699" /> 
				<SafeMoveTo questId="365381" x="1818" y="690" /> 
				<SafeMoveTo questId="365381" x="1797" y="584" /> 					 
					 
				<MoveToActor questId="1" stepId="2" actorId="365097" />				
				<ToggleTargeting questId="1" stepId="2" killRadius="5" looting="True" />
			</If>
		</If>
		<If condition="HasQuest(365381)">
			<SafeMoveTo questId="1" stepId="2" x="2287" y="840" z="-0" pathPrecision="2" pathPointLimit="250" statusText="Moving to Location 2 of 3"/>
			<If condition="CurrentWorldId == 71150 and ActorExistsAt(365097, Me.Position.X, Me.Position.Y, Me.Position.Z, 150)">
				<MoveToActor questId="1" stepId="2" actorId="365097" />
				<ToggleTargeting questId="1" stepId="2" killRadius="5" looting="True" />
			</If>
		</If>
		<If condition="HasQuest(365381)">
			<SafeMoveTo questId="1" stepId="2" x="2097" y="619" z="-0" pathPrecision="2" pathPointLimit="250" statusText="Moving to Location 3 of 3"/>
			<If condition="CurrentWorldId == 71150 and ActorExistsAt(365097, Me.Position.X, Me.Position.Y, Me.Position.Z, 150)">
				<MoveToActor questId="1" stepId="2" actorId="365097" />
				<ToggleTargeting questId="1" stepId="2" killRadius="5" looting="True" />
			</If>
		</If>
<!-- Just in case we didn't find the object -->
		<If condition="HasQuest(365381)">
			<TrinityExploreDungeon questId="1" stepId="2" boxTolerance="0.18" boxSize="15" until="ObjectFound" exitNameHash="365097" ignoreMarkers="False" objectDistance="50">
				<PrioritizeScenes>
					<!--<PriorityScene sceneName="_CaveEntrance_" />-->
				</PrioritizeScenes>
			</TrinityExploreDungeon>
			<MoveToActor questId="1" stepId="2" actorId="365097" interactRange="8"/>
			<ToggleTargeting questId="1" stepId="2" looting="True" killRadius="31" />
		</If>
<!-- Just in case we have roamed too far -->
		<If condition="HasQuest(365381)">
			<TrinityExploreDungeon questId="1" stepId="2" until="BountyComplete" boxTolerance="0.10" boxSize="15" stayAfterBounty="False" statusText="Cleaning Up..."/>
		</If>
	</If>
	<!-- give legendaries a moment to fall from the heavens... -->
	<WaitTimer questId="1" stepId="2" waitTime="3000" />
	<LoadProfile file="act1.xml" />	
</Order>
</Profile>