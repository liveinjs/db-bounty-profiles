<Profile>
<Name>Kill Charger (347070)</Name>
<KillMonsters>True</KillMonsters>
<PickupLoot>true</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<Order>

	<If condition="Me.IsInTown==False"><TrinityTownPortal questId="1" /></If>
	<UseWaypoint waypointNumber="8" questId="1"/>
	<WaitTimer questId="1" stepId="2" waitTime="2000" />	
	<If condition="HasQuest(347070)">
	
		<If condition="CurrentWorldId == 71150">
			<TrinityExploreDungeon questId="1" stepId="2" until="ObjectFound" actorId="218422" boxTolerance="0.10" boxSize="15" />
			<WaitTimer questId="1" stepId="2" waitTime="2000" />
			<!-- If not completed, keep killing things until it is complete-->
			<If condition="HasQuest(347070)">
				<LogMessage quest="1" step="2" output="Found named but still not done, clearing some more." />
				<TrinityExploreDungeon questId="1" stepId="2" until="BountyComplete" boxTolerance="0.10" boxSize="15" stayAfterBounty="False"/>
			</If>
			<MoveToActor questId="1" stepId="2" actorId="176003" />
			<WaitTimer questId="1" stepId="2" waitTime="20000" />
		</If>
		
	</If>
	<LoadProfile file="act1.xml" />
	
</Order>
</Profile>