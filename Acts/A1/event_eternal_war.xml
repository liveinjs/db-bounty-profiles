<!-- X1_Bounty_A1_FesteringWoods_Event_Eternal_War (345505) -->
<Profile>
<Name>Eternal War</Name>
<KillMonsters>True</KillMonsters>
<PickupLoot>True</PickupLoot>
<GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />
<Order>

	<If condition="HasQuest(345505)">		
	
		<!-- Settings -->
		<If condition="Zeta.Bot.Settings.GlobalSettings.Instance.LastProfile.Contains('Zerg')"><ToggleTargeting questId="1" combat="False" /></If>	
		
		<!-- Festering Woods Waypoint -->	
		<While condition="CurrentLevelAreaId != 19953">			
			<UseWaypoint waypointNumber="10" questId="1"/>	
			<WaitTimer questId="1" stepId="2" waitTime="6000" />	
		</While>	
		
		<!-- Safety wait here because of DB bug with WHILE loops ignoring wait tags on subsequent loops -->
		<If condition="CurrentLevelAreaId != 19953">			
			<WaitTimer questId="1" stepId="2" waitTime="3000" />	
		</If>					

		<If condition="CurrentLevelAreaId == 19953">

			<!-- Search for the the monument -->			
			<TrinityExploreDungeon questId="1" stepId="1" until="ObjectFound" actorId="111907" pathPrecision="40" boxSize="10" boxTolerance="0.40">		
				<IgnoreScenes>
						<IgnoreScene sceneName="_S01" />
						<IgnoreScene sceneName="_ExitA_E01" />
						<IgnoreScene sceneName="_ExitA_E02" />
				</IgnoreScenes>
			</TrinityExploreDungeon>
			<UseObject questId="1" stepId="1" actorId="111907" isPortal="False" />

			<ToggleTargeting questId="1" combat="True" killRadius="45" />						
			
			<AdvanceConversation NumberOfTimes="4" />
			
			<!-- Wait for it to start and some extra time for delays between spawns -->
			<If condition="HasQuest(345505)">
				<WaitTimer questId="1" stepId="2" waitTime="10000" />				
				<MoveToActor questId="1" stepId="2" actorId="111907" interactRange="9" name="Temp_FesteringWoodsAmbush_Switch-2213"  pathPrecision="5" pathPointLimit="250" statusText="" /> 			
			</If>			
			<If condition="HasQuest(345505)">
				<WaitTimer questId="345505" stepId="2" waitTime="10000" />				
				<MoveToActor questId="345505" stepId="2" actorId="111907" interactRange="9" name="Temp_FesteringWoodsAmbush_Switch-2213"  pathPrecision="5" pathPointLimit="250" statusText="" /> 			
			</If>			
			<If condition="HasQuest(345505)">
				<WaitTimer questId="345505" stepId="2" waitTime="10000" />				
				<MoveToActor questId="345505" stepId="2" actorId="111907" interactRange="9" name="Temp_FesteringWoodsAmbush_Switch-2213"  pathPrecision="5" pathPointLimit="250" statusText="" /> 			
			</If>				
			
		</If>
	
	</If>
	
	<WaitTimer questId="1" stepId="2" waitTime="2000" />		
	<LoadProfile file="act1.xml" />
	
</Order>
</Profile>
