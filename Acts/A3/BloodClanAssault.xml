<Profile>
  <Name>Blood Clan Assault</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>true</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />

  <Order>
    <HaveBounty questId="369868">

      <!-- Checking we are in Keep Death 1 -->
      <While condition="CurrentWorldId != 81934">
        <UseWaypoint questId="1" waypointNumber="36" />
        <WaitTimer questId="1" stepId="1" waitTime="2500"/>
      </While>

      <If condition="CurrentWorldId == 81934">
        <ToggleTargeting questId="1" combat="true" looting="true" killRadius="15" lootRadius="10" />
        <TrinityExploreDungeon questId="1" stepId="2" until="ObjectFound" objectDistance="300" actorId="364601" boxTolerance="0.01" boxSize="25" ignoreMarkers="False">
          <PrioritizeScenes>
            <PriorityScene sceneName="x1_Event_CursedShrine-8564" pathPrecision="40" />
          </PrioritizeScenes>
        </TrinityExploreDungeon>
        <MoveToActor questId="1" stepId="2" actorId="364601"/>
        <WaitTimer questId="1" stepId="2" waitTime="500" />
        <ToggleTargeting questId="1" combat="True" looting="True" killRadius="90" lootRadius="90" />
        <While condition="ActorExistsAt(364601, Me.Position.X, Me.Position.Y, Me.Position.Z, 150)">
          <MoveToActor questId="1" stepId="2" actorId="364601"/>
        </While>

      </If>
    </HaveBounty>

    <LoadProfile file="act3.xml" />
  </Order>
</Profile>