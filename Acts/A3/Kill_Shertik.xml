  <Order>
    <HaveBounty questId="346200">

      <While condition="CurrentWorldId != 95804">
        <UseWaypoint questId="1" waypointNumber="32" />
        <WaitTimer questId="1" stepId="1" waitTime="2500"/>
      </While>

      <If condition="CurrentWorldId == 95804">
        <SafeMoveTo questId="312429" stepId="2" x="3287" y="598" z="0" pathPrecision="5" pathPointLimit="250" />
        <TrinityExploreDungeon questId="346190" stepId="2" until="ObjectFound" actorId="220708" sceneName="Exit" pathPrecision="25" boxSize="25" boxTolerance="0.4" objectDistance="45">
          <AlternateActors>
            <AlternateActor actorId="0" objectDistance="45" />
          </AlternateActors>
          <IgnoreScenes>
            <IgnoreScene sceneName="a3_Battlefield_ChokepointB_B" />
            <IgnoreScene sceneName="a3_Battlefield_ChokepointB_E02_S01" />
            <IgnoreScene sceneName="a3dun_Bridge_NS_03_Chokepoint" />
          </IgnoreScenes>
        </TrinityExploreDungeon>
        <!--<TrinityExploreDungeon questId="346200" stepId="1" until="ObjectFound" actorId="220806" boxTolerance="0.20" boxSize="20" />-->
        <WaitTimer questId="1" stepId="2" waitTime="1000" />
        <!-- If not completed, keep killing things until it is complete-->
        <HaveBounty questId="346200">
          <LogMessage quest="1" step="1" output="Found named but still not done, clearing some more." />
          <TrinityExploreDungeon questId="346200" stepId="1" until="FullyExplored" boxTolerance="0.20" boxSize="20" />
        </HaveBounty>
      </If>
    </HaveBounty>

    <LoadProfile file="act3.xml" />
  </Order>
