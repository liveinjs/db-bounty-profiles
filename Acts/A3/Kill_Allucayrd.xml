<Profile>
  <Name>Kill_Allucayrd</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>true</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />

  <Order>
    <HaveBounty questId="369329">

      <While condition="CurrentWorldId != 93099 ">
        <UseWaypoint questId="1" waypointNumber="27" />
        <WaitTimer questId="1" stepId="1" waitTime="2500"/>
      </While>

      <If condition="CurrentWorldId == 93099">
        <TrinityExploreDungeon questId="369329" stepId="1" until="ObjectFound" actorId="367366" boxTolerance="0.10" boxSize="15" />
        <WaitTimer questId="1" stepId="2" waitTime="1000" />
        <!-- If not completed, keep killing things until it is complete-->
        <HaveBounty questId="369329">
          <LogMessage quest="1" step="1" output="Found named but still not done, clearing some more." />
          <TrinityExploreDungeon questId="369329" stepId="1" until="BountyComplete" boxTolerance="0.10" boxSize="15" />
        </HaveBounty>
        <WaitTimer questId="369329" stepId="2" waitTime="500" />
      </If>

    </HaveBounty>

    <LoadProfile file="act3.xml" />
  </Order>
</Profile>