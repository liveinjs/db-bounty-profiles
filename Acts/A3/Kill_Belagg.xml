<Profile>
  <Name>Kill_Belagg</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>true</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />

  <Order>
    <HaveBounty questId="346162">

      <!-- Checking we are in Keep Death 1 -->
      <If condition="CurrentWorldId != 136415">
        <UseWaypoint questId="1" waypointNumber="30" />
        <WaitTimer questId="1" stepId="1" waitTime="2500"/>
      </If>

       <!-- In Keep Depths 3, Offset move south from waypoint -->
    <If condition="CurrentWorldId == 136415 and ActorExistsAt(6442, Me.Position.X, Me.Position.Y, Me.Position.Z, 50)">
      <LogMessage questId="101758" stepId="1" output="Moving offset X" />
      <TrinityOffsetMove questId="346162" stepId="1" offsetX="400" offsetY="0" pathPrecision="50" />
    </If>

    <If condition="CurrentWorldId == 136415">
      <TrinityExploreDungeon questId="346162" stepId="1" until="ObjectFound" actorId="220499" boxTolerance="0.10" boxSize="15" />
	  <WaitTimer questId="1" stepId="1" waitTime="2500"/>
	  <TrinityExploreDungeon questId="346162" stepId="1" SetNodesExploredAutomatically="true"
        until="BountyComplete" boxSize="50" boxTolerance="0.01" 
        timeoutType="GoldInactivity" townPortalOnTimeout="True" timeoutValue="60" 
        ignoreMarkers="True" pathPrecision="30">
        <IgnoreScenes>
          <IgnoreScene sceneName="_Exit_01" />
          <IgnoreScene sceneName="_Hall_01" />
          <IgnoreScene sceneName="_N_" />
          <IgnoreScene sceneName="_S_" />
          <IgnoreScene sceneName="_E_" />
          <IgnoreScene sceneName="_W_" />
        </IgnoreScenes>
      </TrinityExploreDungeon>
	  </If>
    </HaveBounty>

    <LoadProfile file="act3.xml" />
  </Order>
</Profile>