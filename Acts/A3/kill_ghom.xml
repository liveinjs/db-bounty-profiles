      </If>
      <!-- END: Finde die Speisekammer -->

      <If condition="CurrentWorldId != 136415 and CurrentWorldId == 103209">
        <!-- START: Kill Ghom -->
        <LogMessage output="Moving to Ghom 3" />
        <SafeMoveTo questId="1" stepId="2" name="Ghom" pathPrecision="10" x="380" y="360" z="0" straightLinePathing="True" />
        <WaitTimer questId="93697" stepId="1" waitTime="225000" />
