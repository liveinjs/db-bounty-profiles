      <If condition="CurrentWorldId == 136415 and CurrentWorldId != 103209">
        <TrinityExploreDungeon questId="1" stepId="2" until="ExitFound" exitNameHash="2102427919" pathPrecision="25" boxTolerance="0.70" boxSize="10">
