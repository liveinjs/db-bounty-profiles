<Profile>
  <Name>Kill_Crabbs</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>true</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />

  <Order>
    <HaveBounty questId="349234">

      <While condition="CurrentWorldId != 79401 and CurrentWorldId != 80763">
        <UseWaypoint questId="1" waypointNumber="35" />
        <WaitTimer questId="1" stepId="1" waitTime="2500"/>
      </While>

      <If condition="CurrentWorldId == 79401">
        <TrinityExploreDungeon questId="349234" stepId="1" until="ObjectFound" actorId="176001" boxTolerance="0.10" boxSize="15" />
        <WaitTimer questId="1" stepId="2" waitTime="1000" />
		<UsePortal questId="349234" stepId="1" actorId="176001" destinationWorldId="80763" interactRange="40" portalMarkerHash="2083727833" />
	</If>
	
	<If condition="CurrentWorldId == 80763">
        <!-- If not completed, keep killing things until it is complete-->
        <HaveBounty questId="349234">
		<TrinityExploreDungeon questId="349234" stepId="1" until="ObjectFound" actorId="220817" boxTolerance="0.10" boxSize="15" />
		<WaitTimer questId="1" stepId="2" waitTime="1000" />
          <LogMessage quest="1" step="1" output="Found named but still not done, clearing some more." />
          <TrinityExploreDungeon questId="349234" stepId="1" until="FullyExplored" boxTolerance="0.10" boxSize="15" />
        </HaveBounty>
      </If>
    </HaveBounty>

    <LoadProfile file="act3.xml" />
  </Order>
</Profile>