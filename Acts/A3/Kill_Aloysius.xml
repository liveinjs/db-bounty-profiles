<Profile>
  <Name>Kill_Aloysius</Name>
  <KillMonsters>True</KillMonsters>
  <PickupLoot>true</PickupLoot>
  <GameParams act="OpenWorld" resumeFromSave="False" isPrivate="True" numGames="-1" />

  <Order>
    <If condition="HasQuest(349119)">

      <While condition="CurrentWorldId != 75434">
        <UseWaypoint questId="1" waypointNumber="29" />
        <WaitTimer questId="1" stepId="1" waitTime="2500"/>
      </While>

      <If condition="CurrentWorldId == 75434">
        <TrinityExploreDungeon questId="349119" stepId="1" until="ObjectFound" actorId="220481" boxTolerance="0.10" boxSize="15" />
        <WaitTimer questId="1" stepId="2" waitTime="1000" />
        <!-- If not completed, keep killing things until it is complete-->
        <If condition="HasQuest(349119)">
          <LogMessage quest="1" step="1" output="Found named but still not done, clearing some more." />
          <TrinityExploreDungeon questId="349119" stepId="1" until="BountyComplete" boxTolerance="0.10" boxSize="15" />
        </If>
      </If>
    </If>

    <LoadProfile file="act3.xml" />
  </Order>
</Profile>